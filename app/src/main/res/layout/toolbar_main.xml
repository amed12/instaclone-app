<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="0dp"
        android:backgroundTint="@color/transparent"
        app:cardElevation="1dp"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_back_setting_profile_edit"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_margin="@dimen/margin_padding_normal"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/cd_default_image"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tv_title_appbar_detail_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_xtiny"
        android:src="@drawable/ic_instagram_small"
        app:layout_constraintEnd_toStartOf="@id/btn_dm"
        app:layout_constraintStart_toEndOf="@id/btn_back_setting_profile_edit"
        app:layout_constraintTop_toTopOf="@+id/btn_back_setting_profile_edit" />

    <ImageButton
        android:id="@+id/btn_dm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_dm"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back_setting_profile_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back_setting_profile_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>