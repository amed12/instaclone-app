<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SFProFont" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
    </style>

    <style name="SFProFont.Italic">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SFProFont.Medium">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
    </style>

    <style name="SFProFont.Regular">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SFProFont.SemiBold">
        <item name="android:fontFamily">@font/sf_ui_semibold</item>
    </style>

    <style name="SFProFont.Bold">
        <item name="android:fontFamily">@font/sf_ui_bold</item>
    </style>

    <style name="TextStyle.Subtitle2.Black" parent="SFProFont.Regular">
        <item name="android:textSize">@dimen/font_subtitle_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Caption.Accent" parent="SFProFont.Regular">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Caption.Blue2.SemiBold" parent="SFProFont.SemiBold">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/blue_2</item>
    </style>

    <style name="TextStyle.Caption.Grey3" parent="SFProFont.Regular">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/grey_3</item>
    </style>

    <style name="TextStyle.Caption.Black" parent="SFProFont.Regular">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Caption.Black.Medium" parent="SFProFont.Medium">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Subtitle2.Black.Bold" parent="SFProFont.Bold">
        <item name="android:textSize">@dimen/font_subtitle_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Headline6.Black.Bold" parent="SFProFont.Bold">
        <item name="android:textSize">@dimen/font_headline_6</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Subtitle1.Black.Bold" parent="SFProFont.Bold">
        <item name="android:textSize">@dimen/font_subtitle_1</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextStyle.Caption.Accent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:layout_margin">@dimen/margin_padding_xnormal</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">8dp</item>
    </style>


</resources>